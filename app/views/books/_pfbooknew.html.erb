<h2>User info</h2>
  <% if user_book.user_image.attached? %>
    <%= image_tag user_book.user_image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
  <% end %>
  <table>
    <tbody>
      <tr>
        <th>name</th>
      </tr>
      <tr>
        <th><%= user_book.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
      </tr>
      <tr>
        <th><%= user_book.introduction %></th>
      </tr>
    </tbody>
  </table>

<h2>New book</h2>
  <% if book_new.errors.any? %>
    <%= book_new.errors.count %>件のエラーが発生しました
    <ul>
      <% book_new.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with model: book_new do |f| %>
    <div>
      <%= f.label :title, 'Title' %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :body, 'Opinion' %>
      <%= f.text_area :body %>
    </div>
    <div>
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>