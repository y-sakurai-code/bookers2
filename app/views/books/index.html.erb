<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/pfbooknew', book: @book, book_new: @book_new, book_all: @book_all, user_book: @user_book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
            </tr>
            <% @book_all.each do |book| %>
              <tr>
                <th><a href="<%= user_path(book.user) %>"><%= image_tag book.user.user_image, size: "100x100" %></a></th>
                <th><a href="<%= book_path(book) %>"><%= book.title %></a></th>
                <th><%= book.body %></th>
                <th></th>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>