<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/pfbooknew', book_new: @book_new, user_book: current_user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <th>
                  <% if user.profile_image.attached? %>
                    <%= image_tag user.profile_image, size: "100x100" %>
                  <% else %>
                    <%= image_tag 'no_image', size: "100x100" %>
                  <% end %>
                </th>
                <th><%= user.name %></th>
                <th><a button type="button" class="btn btn-link" href="<%= user_path(user) %>">Show</button></a></th>
                </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>