<div class="container px-5 px-sm-0">
  <% if @book_new.errors.any? %>
    <%= @book_new.errors.count %>error prohibited this obj from being saved
      <ul>
        <% @book_new.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/pfbooknew', book_new: @book_new, user_book: current_user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
            </tr>
            <% @book_all.each do |book| %>
              <tr>
                <th>
                  <a href="<%= user_path(book.user) %>">
                    <% if book.user.profile_image.attached? %>
                      <%= image_tag book.user.profile_image, size: "100x100" %>
                    <% else %>
                      <%= image_tag 'no_image', size: "100x100" %>
                    <% end %>
                  </a>
                </th>
                <th><a href="<%= book_path(book) %>"><%= book.title %></a></th>
                <th><%= book.body %></th>
                <th></th>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>